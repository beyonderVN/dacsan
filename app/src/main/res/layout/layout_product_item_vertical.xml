<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:id="@+id/cvWrap"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.vnwarriors.advancedui.appcore.common.DynamicHeightImageView
            android:id="@+id/ivProductImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/vungtau" />

        <TextView
        android:text="IPHONE XYZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvProductName"
        android:textSize="14sp"
        android:textAlignment="viewStart"
        android:textColor="@color/black_86p"
        android:padding="@dimen/medium_pad"/>
        <TextView
            android:text="78,000 Ä‘"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvProductPrice"
            android:textSize="14sp"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_red"
            android:padding="@dimen/medium_pad"
            android:textStyle="normal|bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@color/anh"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            />
        <TextView
            android:text="VinhSangCommerce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvProductStore"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:padding="@dimen/medium_pad"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>

